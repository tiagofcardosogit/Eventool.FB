<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiagocardoso.eventool.Activities.ListaEventosActivity">


    <TextView
        android:id="@+id/textViewNomeEventoID"
        android:layout_width="370dp"
        android:layout_height="65dp"
        android:layout_marginTop="21dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:id="@+id/textViewDetalhesID"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="12dp"
        android:textAlignment="gravity"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewHoraID"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/texViewtDataID"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/texViewtDataID"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textViewHoraID"
        android:layout_alignTop="@+id/textView14"
        android:layout_marginTop="23dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/textViewNomeEventoID"
        android:layout_alignStart="@+id/texViewtDataID"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Detalhes"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewNomeEventoID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewDetalhesID"
        android:layout_below="@+id/textViewDetalhesID"
        android:layout_marginTop="26dp"
        android:text=" Qando?"
        android:textAlignment="inherit"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
